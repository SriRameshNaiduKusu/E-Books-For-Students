    <!-- pdf viewer to load and display PDF -->

    <RelativeLayout
        android:id="@+id/RLTopLayout_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RLTop">

            <ImageView
                android:id="@+id/imBack_test"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_margin="0dp"
                android:padding="5dp"
                android:src="@drawable/go_back" />
            <TextView
                android:id="@+id/TVTitle_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Categories"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/book_download_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_baseline_arrow_downward_24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfViewTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_below="@id/RLTopLayout_test"/>


